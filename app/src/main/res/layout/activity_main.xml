<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mariko.bistroread.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Pause" android:id="@+id/paused" />
    
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtContent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="#FFFAE4">

        <View
            android:layout_height="1dip"
            android:background="@color/line"
            android:layout_width="match_parent" />

        <View
            android:layout_marginBottom="20dip"
            android:layout_gravity="center_horizontal"
            android:layout_width="1dip"
            android:layout_height="@dimen/vertical_line_height"
            android:background="@color/line" />

        <com.mariko.bistroread.HighlighTextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.mariko.bistroread.HighlighTextView
            android:id="@+id/txt2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.mariko.bistroread.HighlighTextView
            android:id="@+id/txt3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="20dip"
            android:layout_gravity="center_horizontal"
            android:layout_width="1dip"
            android:layout_height="@dimen/vertical_line_height"
            android:background="@color/line" />

        <View
            android:layout_height="1dip"
            android:background="@color/line"
            android:layout_width="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="20dip"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="44dip" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/seekBarDividers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            </LinearLayout>

    </LinearLayout>


</RelativeLayout>
